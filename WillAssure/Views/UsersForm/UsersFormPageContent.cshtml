<script>

    function validateDOB(value) {



        var today = new Date();
        var birthDate = new Date(value);
        var age = today.getFullYear() - birthDate.getFullYear();

        if (age > 18) {
            $("#datemsg").hide();
        }
        else {
            $("#datemsg").show();
        }



    }


    $('.radio').on('change', function () {
       
        $('.radio').not(this).prop('checked', false);
        var val = $("input[name=radio]:checked").val()
      
        if (val == "Yes") {
          
            $("#showcompany").removeAttr("style");
            $(".companyclass").removeAttr("style");
            $("#txtcheck").val("true");

        }

        if (val == "No") {
          
            $(".companyclass").css("display", "none");
            $("#txtcheck").val("false");
         
        }


    });


