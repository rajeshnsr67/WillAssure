<script>

    function checkcoupon(value) {

        var tid = $("#tId").val();

     
        $("#lblerrmsg").hide();
        var entertxt = $("#txtcoupon").val();
        var data = tid + "~" + entertxt;



        var regex = /^(0|[1-9][0-9]*)$/;

        if (regex.test(entertxt) == true) {

            $("#lblerr").hide();
        }

        if (regex.test(entertxt) == false) {

            $("#lblerr").show();
        }
        else {
                $.ajax({

            type:"POST",
             url:"@Url.Action("txtchangecouponnumber", "EditTestator")",
            data: { "send": "" + data + "" },
            success: function (data) {

                if (data == "success") {
                    $("#lblerrsuccess").show();
                }


                if (data == "failed") {
                    $("#lblerrmsg").show();
                }


                if (data == "Expire") {
                    $("#lblexpire").show();
                }

            }
        });
        }









    }


</script>